generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id           Int      @id @default(autoincrement())
  ticketNumber Int      @unique
  name         String
  priority     String
  creator      String
  description  String
  status       String
  cause        String?
  solution     String?
  holdReason   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

